{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:production": "NODE_ENV=production node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'Backend build complete - no compilation needed for Node.js'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:performance": "artillery run src/tests/performance/load-test.yml",
    "test:load": "node src/tests/performance/run-load-tests.js",
    "test:load:concurrent": "jest src/tests/performance/concurrent-contacts-load.test.js --runInBand",
    "test:load:chaos": "jest src/tests/performance/chaos-engineering.test.js --runInBand",
    "test:load:monitoring": "jest src/tests/performance/continuous-reliability-monitoring.test.js --runInBand",
    "test:load:artillery": "artillery run src/tests/performance/api-reliability-load-test.yml",
    "test:reliability": "npm run test:load:concurrent && npm run test:load:chaos && npm run test:load:monitoring",
    "test:structure": "jest src/tests/database-structure.test.js",
    "migrate": "node src/migrations/migrate.js",
    "migrate:rollback": "node src/migrations/migrate.js rollback",
    "seed": "node src/seeds/seed.js",
    "db:setup": "npm run migrate && npm run seed",
    "db:test": "node src/utils/test-db-connection.js",
    "health-check": "node -e \"console.log('Backend health check passed')\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.4",
    "cross-env": "^7.0.3",
    "artillery": "^2.0.4"
  }
}
